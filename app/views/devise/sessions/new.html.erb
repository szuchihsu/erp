<h2>Log in</h2>

<%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |form| %>
  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= form.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
