<div class="px-4 sm:px-6 lg:px-8">
  <div class="md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        New Bill of Materials
      </h2>
      <p class="mt-1 text-sm leading-6 text-gray-600">
        Create a new manufacturing specification for <%= @product.name %>
      </p>
    </div>
  </div>

  <div class="mt-8">
    <%= form_with model: [@product, @bill_of_material], local: true, class: "space-y-8 divide-y divide-gray-200" do |form| %>
      <% if @bill_of_material.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@bill_of_material.errors.count, "error") %> prohibited this bill of materials from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul role="list" class="list-disc space-y-1 pl-5">
                  <% @bill_of_material.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="space-y-8 divide-y divide-gray-200">
        <div>
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <%= form.label :version, "Version", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :version, 
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                    placeholder: "e.g., 1.0, 2.1" %>
              </div>
              <p class="mt-2 text-sm text-gray-500">Version identifier for this BOM (must be unique for this product)</p>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :effective_date, "Effective Date", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.date_field :effective_date, 
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
              <p class="mt-2 text-sm text-gray-500">When this BOM becomes effective</p>
            </div>

            <div class="sm:col-span-6">
              <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_area :description, 
                    rows: 3,
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                    placeholder: "Brief description of this BOM version..." %>
              </div>
            </div>

            <div class="sm:col-span-6">
              <%= form.label :notes, "Manufacturing Notes", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_area :notes, 
                    rows: 4,
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                    placeholder: "Special instructions, assembly notes, quality requirements..." %>
              </div>
            </div>
          </div>
        </div>

        <!-- BOM Items Section -->
        <div class="pt-8">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-lg font-medium leading-6 text-gray-900">Material Requirements</h3>
              <p class="mt-1 text-sm text-gray-500">
                Add materials and components needed to manufacture this product
              </p>
            </div>
            <button type="button" id="add-bom-item" 
                    class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer">
              Add Material
            </button>
          </div>

          <div id="bom-items" class="mt-6 space-y-4">
            <%= form.fields_for :bom_items do |item_form| %>
              <%= render 'bom_item_fields', form: item_form %>
            <% end %>
          </div>

          <div class="mt-4 text-sm text-gray-500">
            <p>Click "Add Material" to specify the materials needed for this product.</p>
          </div>
        </div>
      </div>

      <div class="pt-5">
        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", product_bill_of_materials_path(@product), 
              class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
          <%= form.submit "Create Bill of Materials", 
              class: "inline-flex justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render 'bom_item_template' %>

<script>
document.addEventListener('turbo:load', function() {
  // ✅ Remove any existing event listeners to prevent duplicates
  const existingHandler = window.bomFormHandler;
  if (existingHandler) {
    existingHandler.cleanup();
  }

  // ✅ Clear any dynamically added items from previous visits
  const bomItemsContainer = document.getElementById('bom-items');
  if (bomItemsContainer) {
    // Remove any items that don't have Rails form fields (dynamically added)
    const dynamicItems = bomItemsContainer.querySelectorAll('.bom-item:not([data-rails-generated])');
    dynamicItems.forEach(item => item.remove());
  }

  const addButton = document.getElementById('add-bom-item');
  if (!addButton || !bomItemsContainer) return;

  let itemIndex = <%= @bill_of_material.bom_items.length %>;

  function addBomItem() {
    const template = document.getElementById('bom-item-template');
    if (!template) return;
    
    const templateContent = template.innerHTML;
    const newItem = templateContent.replace(/NEW_RECORD/g, new Date().getTime());
    bomItemsContainer.insertAdjacentHTML('beforeend', newItem);
  }

  function removeBomItem(e) {
    if (e.target.classList.contains('remove-bom-item')) {
      e.preventDefault();
      const bomItem = e.target.closest('.bom-item');
      const destroyField = bomItem.querySelector('input[name*="[_destroy]"]');
      
      if (destroyField) {
        // This is a persisted item, mark for destruction
        destroyField.value = '1';
        bomItem.style.display = 'none';
      } else {
        // This is a new dynamic item, just remove it
        bomItem.remove();
      }
    }
  }

  // ✅ Add event listeners
  addButton.addEventListener('click', addBomItem);
  bomItemsContainer.addEventListener('click', removeBomItem);

  // ✅ Store cleanup function for next page load
  window.bomFormHandler = {
    cleanup: function() {
      addButton.removeEventListener('click', addBomItem);
      bomItemsContainer.removeEventListener('click', removeBomItem);
    }
  };
});

// ✅ Clean up when leaving the page
document.addEventListener('turbo:before-visit', function() {
  if (window.bomFormHandler) {
    window.bomFormHandler.cleanup();
  }
});
</script>
