<div class="w-full">
  <!-- Header Section -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Bill of Materials</h1>
        <p class="mt-2 text-gray-600">Manufacturing specifications for <%= @product.name %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to new_product_bill_of_material_path(@product), 
            class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          New BOM Version
        <% end %>
        <%= link_to @product, 
            class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Product
        <% end %>
      </div>
    </div>
  </div>

  <!-- BOM Table -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Version</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Status</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Description</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Materials</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Total Cost</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Effective Date</th>
                <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @bill_of_materials.each do |bom| %>
                <tr class="<%= 'bg-green-50' if bom.is_active %>">
                  <td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-gray-900">
                    <%= bom.version %>
                    <% if bom.is_active %>
                      <span class="ml-2 inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">Active</span>
                    <% end %>
                  </td>
                  <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-500">
                    <% if bom.required_materials_available? %>
                      <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">Ready</span>
                    <% else %>
                      <span class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">Materials Missing</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <%= bom.description.present? ? bom.description : "No description" %>
                  </td>
                  <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-500">
                    <%= pluralize(bom.bom_items.count, 'material') %>
                  </td>
                  <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-500">
                    $<%= number_with_precision(bom.total_cost || 0, precision: 2) %>
                  </td>
                  <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-500">
                    <%= bom.effective_date&.strftime("%m/%d/%Y") || "Not set" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex space-x-2">
                      <%= link_to "View", [@product, bom], class: "text-purple-600 hover:text-purple-900" %>
                      <% unless bom.is_active %>
                        <%= link_to "Edit", edit_product_bill_of_material_path(@product, bom), class: "text-gray-600 hover:text-gray-900" %>
                        <%= link_to "Activate", activate_product_bill_of_material_path(@product, bom), 
                            method: :patch, 
                            data: { confirm: "This will deactivate the current active BOM. Continue?" },
                            class: "text-green-600 hover:text-green-900" %>
                      <% end %>
                      <%= link_to "Copy", copy_product_bill_of_material_path(@product, bom), 
                          method: :post,
                          data: { confirm: "Create a new version based on this BOM?" },
                          class: "text-blue-600 hover:text-blue-900" %>
                      <% unless bom.is_active %>
                        <%= link_to "Delete", [@product, bom], 
                            method: :delete,
                            data: { confirm: "Are you sure? This action cannot be undone." },
                            class: "text-red-600 hover:text-red-900" %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          
          <% if @bill_of_materials.empty? %>
            <!-- Empty State -->
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <h3 class="mt-2 text-lg font-medium text-gray-900">No BOMs found</h3>
              <p class="mt-1 text-sm text-gray-500">Get started by creating your first bill of materials.</p>
              <div class="mt-6">
                <%= link_to new_product_bill_of_material_path(@product), 
                    class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  New BOM Version
                <% end %>
              </div>
            </div>
          <% end %>
  </div>
</div>
</div>
