<% content_for :title, @material.name %>

<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-4">
      <%= link_to materials_path, 
          class: "text-gray-400 hover:text-gray-600" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      <% end %>
      <div class="flex-1">
        <h1 class="text-3xl font-bold text-gray-900"><%= @material.name %></h1>
        <p class="text-gray-600">Material Code: <span class="font-medium"><%= @material.code %></span></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to edit_material_path(@material), 
            class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit Material
        <% end %>
        <%= button_to @material, method: :delete, 
            data: { 
              turbo_confirm: "Are you sure you want to delete this material? This action cannot be undone." 
            },
            class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center cursor-pointer" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete Material
        <% end %>
        <%= link_to adjust_material_inventory_path(@material), 
            class: "bg-yellow-600 hover:bg-yellow-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Adjust Stock
        <% end %>
        <%= link_to restock_material_inventory_path(@material), 
            class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Restock
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Material Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Basic Information -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Material Information</h3>
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Name</dt>
            <dd class="text-sm text-gray-900 font-medium"><%= @material.name %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Code</dt>
            <dd class="text-sm text-gray-900 font-mono"><%= @material.code %></dd>
          </div>
          <% if @material.category %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Category</dt>
              <dd class="text-sm text-gray-900">
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                  <%= @material.category.humanize %>
                </span>
              </dd>
            </div>
          <% end %>
          <% if @material.subcategory %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Subcategory</dt>
              <dd class="text-sm text-gray-900"><%= @material.subcategory %></dd>
            </div>
          <% end %>
          <% if @material.unit_of_measure %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Unit of Measure</dt>
              <dd class="text-sm text-gray-900"><%= @material.unit_of_measure %></dd>
            </div>
          <% end %>
          <% if @material.supplier %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Supplier</dt>
              <dd class="text-sm text-gray-900"><%= @material.supplier %></dd>
            </div>
          <% end %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Status</dt>
            <dd class="text-sm text-gray-900">
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium
                <%= @material.is_active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= @material.is_active? ? 'Active' : 'Inactive' %>
              </span>
            </dd>
          </div>
        </dl>
        <% if @material.description.present? %>
          <div class="mt-4">
            <dt class="text-sm font-medium text-gray-500 mb-2">Description</dt>
            <dd class="text-sm text-gray-900"><%= @material.description %></dd>
          </div>
        <% end %>
      </div>

      <!-- Recent Transactions -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <div class="flex justify-between items-center">
            <h3 class="text-lg font-medium text-gray-900">Recent Transactions</h3>
            <%= link_to "View All â†’", inventory_transactions_path(material_id: @material.id), 
                class: "text-purple-600 hover:text-purple-800 text-sm font-medium" %>
          </div>
        </div>

        <% if @recent_transactions.any? %>
          <div class="divide-y divide-gray-200">
            <% @recent_transactions.each do |transaction| %>
              <div class="px-6 py-4">
                <div class="flex justify-between items-center">
                  <div class="flex items-center space-x-3">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= case transaction.transaction_type
                          when 'in' then 'bg-green-100 text-green-800'
                          when 'out' then 'bg-red-100 text-red-800'
                          when 'adjustment' then 'bg-yellow-100 text-yellow-800'
                          when 'transfer' then 'bg-blue-100 text-blue-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= transaction.transaction_type.humanize %>
                    </span>
                    <div>
                      <p class="text-sm font-medium text-gray-900">
                        <%= transaction.transaction_type == 'out' ? '-' : '+' %><%= transaction.quantity %>
                        <%= @material.unit_of_measure %>
                      </p>
                      <p class="text-xs text-gray-500"><%= transaction.notes&.truncate(50) %></p>
                    </div>
                  </div>
                  <div class="text-right">
                    <p class="text-xs text-gray-500">
                      <%= transaction.created_at.strftime("%m/%d/%Y %I:%M %p") %>
                    </p>
                    <p class="text-xs text-gray-500">
                      by <%= transaction.user&.name || transaction.user&.email %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-8 text-center">
            <p class="text-gray-500">No transactions yet</p>
          </div>
        <% end %>
      </div>

      <!-- Recent Adjustments -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-medium text-gray-900">Recent Stock Adjustments</h3>
        </div>

        <% if @recent_adjustments.any? %>
          <div class="divide-y divide-gray-200">
            <% @recent_adjustments.each do |adjustment| %>
              <div class="px-6 py-4">
                <div class="flex justify-between items-start">
                  <div>
                    <p class="text-sm font-medium text-gray-900">
                      <%= adjustment.adjustment_type.humanize %>: <%= adjustment.display_quantity %> <%= @material.unit_of_measure %>
                    </p>
                    <p class="text-sm text-gray-600 mt-1"><%= adjustment.reason %></p>
                  </div>
                  <div class="text-right">
                    <p class="text-xs text-gray-500">
                      <%= adjustment.created_at.strftime("%m/%d/%Y %I:%M %p") %>
                    </p>
                    <p class="text-xs text-gray-500">
                      by <%= adjustment.user&.name || adjustment.user&.email %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-8 text-center">
            <p class="text-gray-500">No adjustments yet</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Stock Information Sidebar -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Stock Information</h3>
        
        <div class="space-y-4">
          <div class="text-center">
            <p class="text-sm font-medium text-gray-500">Current Stock</p>
            <p class="text-4xl font-bold text-gray-900 mt-1">
              <%= @material.current_stock || 0 %>
            </p>
            <% if @material.unit_of_measure %>
              <p class="text-sm text-gray-500"><%= @material.unit_of_measure %></p>
            <% end %>
          </div>

          <div class="border-t border-gray-200 pt-4">
            <div class="flex justify-between items-center mb-2">
              <span class="text-sm font-medium text-gray-500">Stock Status</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                <%= case @material.stock_status
                    when 'in_stock' then 'bg-green-100 text-green-800'
                    when 'low_stock' then 'bg-yellow-100 text-yellow-800'
                    when 'out_of_stock' then 'bg-red-100 text-red-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= @material.stock_status.humanize %>
              </span>
            </div>

            <% if @material.minimum_stock %>
              <div class="flex justify-between items-center mb-2">
                <span class="text-sm font-medium text-gray-500">Minimum Stock</span>
                <span class="text-sm text-gray-900"><%= @material.minimum_stock %></span>
              </div>
            <% end %>

            <% if @material.current_cost %>
              <div class="flex justify-between items-center mb-2">
                <span class="text-sm font-medium text-gray-500">Unit Cost</span>
                <span class="text-sm text-gray-900">$<%= @material.current_cost %></span>
              </div>

              <div class="flex justify-between items-center mb-2">
                <span class="text-sm font-medium text-gray-500">Total Value</span>
                <span class="text-sm font-bold text-gray-900">$<%= (@material.current_stock * @material.current_cost).round(2) %></span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="mt-6 pt-6 border-t border-gray-200 space-y-3">
          <%= link_to restock_material_inventory_path(@material), 
              class: "w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md font-medium text-center block" do %>
            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Restock Material
          <% end %>

          <%= link_to adjust_material_inventory_path(@material), 
              class: "w-full bg-yellow-600 hover:bg-yellow-700 text-white px-4 py-2 rounded-md font-medium text-center block" do %>
            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Adjust Stock
          <% end %>

          <%= link_to inventory_transactions_path(material_id: @material.id), 
              class: "w-full bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md font-medium text-center block" do %>
            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            View All Transactions
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>