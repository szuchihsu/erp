<% content_for :title, "Materials Management" %>

<div class="w-full">
  <!-- Header Section -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Materials Management</h1>
        <p class="mt-2 text-gray-600">Manage raw materials, components, and manufacturing supplies</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to new_material_path, 
            class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Add Material
        <% end %>
        <%= link_to inventory_path, 
            class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
          Back to Inventory
        <% end %>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Filter Materials</h3>
    <%= form_with url: materials_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4" do |form| %>
      <div>
        <%= form.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :search, value: params[:search],
            placeholder: "Search by name or code...",
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500" %>
      </div>

      <div>
        <%= form.label :category, "Category", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :category, 
            options_for_select([
              ['All Categories', ''],
              ['Precious Metal', 'precious_metal'],
              ['Gemstone', 'gemstone'],
              ['Finding', 'finding'],
              ['Tool', 'tool'],
              ['Consumable', 'consumable'],
              ['Packaging', 'packaging']
            ], params[:category]), 
            {}, 
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500" } %>
      </div>

      <div>
        <%= form.label :stock_status, "Stock Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :stock_status, 
            options_for_select([
              ['All Stock Levels', ''],
              ['In Stock', 'in_stock'],
              ['Low Stock', 'low_stock'],
              ['Out of Stock', 'out_of_stock']
            ], params[:stock_status]), 
            {}, 
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500" } %>
      </div>

      <div class="flex items-end">
        <%= form.submit "Apply Filters", class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-md font-medium w-full" %>
      </div>
    <% end %>
  </div>

  <!-- Materials Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <% @materials.each do |material| %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start mb-4">
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-gray-900 mb-1">
              <%= link_to material.name, material, class: "hover:text-purple-600" %>
            </h3>
            <p class="text-sm text-gray-500"><%= material.code %></p>
            <% if material.category %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800 mt-2">
                <%= material.category.humanize %>
              </span>
            <% end %>
          </div>
          <div class="flex space-x-2">
            <%= link_to adjust_material_inventory_path(material), 
                class: "text-gray-400 hover:text-yellow-600" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            <% end %>
            <%= link_to restock_material_inventory_path(material), 
                class: "text-gray-400 hover:text-green-600" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
            <% end %>
          </div>
        </div>

        <div class="space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-sm font-medium text-gray-500">Current Stock</span>
            <span class="text-lg font-bold text-gray-900">
              <%= material.current_stock || 0 %>
              <% if material.unit_of_measure %>
                <span class="text-sm font-normal text-gray-500"><%= material.unit_of_measure %></span>
              <% end %>
            </span>
          </div>

          <div class="flex justify-between items-center">
            <span class="text-sm font-medium text-gray-500">Status</span>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
              <%= case material.stock_status
                  when 'in_stock' then 'bg-green-100 text-green-800'
                  when 'low_stock' then 'bg-yellow-100 text-yellow-800'
                  when 'out_of_stock' then 'bg-red-100 text-red-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              <%= material.stock_status.humanize %>
            </span>
          </div>

          <% if material.current_cost %>
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-500">Unit Cost</span>
              <span class="text-sm font-medium text-gray-900">$<%= material.current_cost %></span>
            </div>
          <% end %>

          <% if material.minimum_stock %>
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-500">Min Stock</span>
              <span class="text-sm text-gray-700"><%= material.minimum_stock %></span>
            </div>
          <% end %>
        </div>

        <div class="mt-4 pt-4 border-t border-gray-200 flex justify-between">
          <%= link_to "View Details", material, 
              class: "text-purple-600 hover:text-purple-800 text-sm font-medium" %>
          <%= link_to "Transactions", inventory_transactions_path(material_id: material.id), 
              class: "text-gray-600 hover:text-gray-800 text-sm font-medium" %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @materials.empty? %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
      </svg>
      <h3 class="mt-2 text-lg font-medium text-gray-900">No materials found</h3>
      <p class="mt-1 text-sm text-gray-500">
        <% if params[:search].present? || params[:category].present? || params[:stock_status].present? %>
          Try adjusting your filters to see more results.
        <% else %>
          Get started by adding your first material to the system.
        <% end %>
      </p>
      <div class="mt-6">
        <%= link_to new_material_path, 
            class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Add First Material
        <% end %>
      </div>
    </div>
  <% end %>
</div>