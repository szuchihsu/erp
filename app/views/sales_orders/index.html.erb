<% content_for :title, "Sales Orders" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Sales Orders</h1>
    <%= link_to "New sales order", new_sales_order_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium" %>
  </div>

  <!-- Filters -->
  <div class="bg-white p-4 rounded-lg shadow mb-6">
    <%= form_with url: sales_orders_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
      <div class="flex-1 min-w-64">
        <%= form.text_field :search, placeholder: "Search orders...", value: params[:search], 
            class: "block w-full rounded-md border border-gray-300 px-3 py-2" %>
      </div>
      <div>
        <%= form.select :order_status, options_for_select([
              ["All Status", ""],
              ["Inquiry", "inquiry"],
              ["Quotation Sent", "quotation_sent"],
              ["Pending Design", "pending_design"],
              ["Design Approved", "design_approved"],
              ["Confirmed", "confirmed"],
              ["In Production", "in_production"],
              ["Quality Check", "quality_check"],
              ["Completed", "completed"],
              ["Shipped", "shipped"]
            ], params[:order_status]), {}, { class: "rounded-md border border-gray-300 px-3 py-2" } %>
      </div>
      <div>
        <%= form.select :customer_id, options_from_collection_for_select(Customer.all, :id, :name, params[:customer_id]), 
            { prompt: "All Customers" }, { class: "rounded-md border border-gray-300 px-3 py-2" } %>
      </div>
      <div>
        <%= form.submit "Search", class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
        <%= link_to "Clear", sales_orders_path, class: "bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400 ml-2" %>
      </div>
    <% end %>
  </div>

  <!-- Orders Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <% if @sales_orders.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employee</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dates</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @sales_orders.each do |sales_order| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= link_to sales_order.order_id, sales_order, class: "text-blue-600 hover:text-blue-900" %>
                    </div>
                    <div class="text-sm text-gray-500">
                      ID: <%= sales_order.id %>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div>
                    <div class="text-sm font-medium text-gray-900"><%= sales_order.customer.name %></div>
                    <div class="text-sm text-gray-500"><%= sales_order.customer.customer_id %></div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= sales_order.employee&.name || "Unassigned" %></div>
                  <div class="text-sm text-gray-500"><%= sales_order.employee&.department&.capitalize %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <strong>Order:</strong> <%= sales_order.order_date&.strftime("%m/%d/%Y") %>
                  </div>
                  <% if sales_order.delivery_date %>
                    <div class="text-sm text-gray-500">
                      <strong>Delivery:</strong> <%= sales_order.delivery_date&.strftime("%m/%d/%Y") %>
                    </div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <strong>$<%= sales_order.total_amount || 0 %></strong>
                  </div>
                  <% if sales_order.deposit_amount && sales_order.deposit_amount > 0 %>
                    <div class="text-sm text-gray-500">
                      Deposit: $<%= sales_order.deposit_amount %>
                    </div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                    <%= case sales_order.order_status
                        when 'inquiry' then 'bg-gray-100 text-gray-800'
                        when 'quotation_sent' then 'bg-blue-100 text-blue-800'
                        when 'pending_design' then 'bg-purple-100 text-purple-800'
                        when 'design_approved' then 'bg-indigo-100 text-indigo-800'
                        when 'confirmed' then 'bg-blue-100 text-blue-800'
                        when 'in_production' then 'bg-orange-100 text-orange-800'
                        when 'quality_check' then 'bg-yellow-100 text-yellow-800'
                        when 'completed' then 'bg-green-100 text-green-800'
                        when 'shipped' then 'bg-green-100 text-green-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= sales_order.order_status&.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if sales_order.can_be_fulfilled? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                      Stock Available
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                      </svg>
                      Low Stock
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                  <%= link_to "View", sales_order, class: "text-blue-600 hover:text-blue-900" %>
                  <%= link_to "Edit", edit_sales_order_path(sales_order), class: "text-indigo-600 hover:text-indigo-900" %>
                  <%= button_to "Delete", sales_order_path(sales_order), 
                      method: :delete,
                      data: { 
                        "turbo-confirm": "Are you sure you want to delete this order? This action cannot be undone." 
                      },
                      class: "text-red-600 hover:text-red-900 cursor-pointer",
                      form_class: "inline" %>
                  <% if sales_order.order_status == 'confirmed' && sales_order.can_be_fulfilled? %>
                    <%= link_to "Fulfill", fulfill_sales_order_path(sales_order), method: :patch, 
                        class: "text-green-600 hover:text-green-900",
                        data: { confirm: "Are you sure you want to fulfill this order? This will reduce inventory." } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Summary -->
      <div class="bg-gray-50 px-6 py-3 border-t border-gray-200">
        <div class="flex justify-between items-center text-sm text-gray-700">
          <div>
            Showing <%= @sales_orders.count %> orders
          </div>
          <div>
            Total Value: $<%= @sales_orders.sum(:total_amount) || 0 %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No orders found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new sales order.</p>
        <div class="mt-6">
          <%= link_to "New Sales Order", new_sales_order_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
