<% content_for :title, @sales_order.order_id %>

<div class="mx-auto md:w-4/5 w-full">
  <% if notice %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <!-- Header -->
  <div class="flex justify-between items-start mb-6">
    <div>
      <h1 class="font-bold text-4xl">Order <%= @sales_order.order_id %></h1>
      <p class="text-gray-600 mt-2">Created on <%= @sales_order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>
    <div class="text-right">
      <span class="px-3 py-1 text-sm font-medium rounded-full
        <%= case @sales_order.order_status
            when 'pending' then 'bg-yellow-100 text-yellow-800'
            when 'confirmed' then 'bg-blue-100 text-blue-800'
            when 'in_production' then 'bg-purple-100 text-purple-800'
            when 'ready_for_delivery' then 'bg-indigo-100 text-indigo-800'
            when 'delivered' then 'bg-green-100 text-green-800'
            when 'completed' then 'bg-green-100 text-green-800'
            when 'cancelled' then 'bg-red-100 text-red-800'
            else 'bg-gray-100 text-gray-800'
            end %>">
        <%= @sales_order.order_status&.humanize %>
      </span>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Information -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Customer Information -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Customer Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm font-medium text-gray-500">Name</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.customer.name %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Customer ID</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.customer.customer_id %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Email</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.customer.email %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Phone</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.customer.phone %></p>
          </div>
        </div>
        <div class="mt-4">
          <%= link_to "View Customer", @sales_order.customer, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
        </div>
      </div>

      <!-- Order Details -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Order Details</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm font-medium text-gray-500">Order Date</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.order_date&.strftime("%B %d, %Y") %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Delivery Date</p>
            <p class="mt-1 text-sm text-gray-900">
              <%= @sales_order.delivery_date&.strftime("%B %d, %Y") || "Not set" %>
            </p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Sales Representative</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.employee.name %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Department</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.employee.department&.capitalize %></p>
          </div>
        </div>
      </div>

      <!-- Order Items -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-lg font-semibold text-gray-900">Order Items</h2>
          <%= link_to "Add Item", new_sales_order_sales_order_item_path(@sales_order), 
              class: "bg-blue-600 text-white px-3 py-1 rounded-md text-sm hover:bg-blue-700" %>
        </div>
        
        <% if @sales_order.sales_order_items.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit Price</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Specifications</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @sales_order.sales_order_items.each do |item| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div>
                        <div class="text-sm font-medium text-gray-900"><%= item.product.name %></div>
                        <div class="text-sm text-gray-500">
                          <%= item.product.product_id %> | <%= item.product.category&.capitalize %>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= item.quantity %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      $<%= number_with_precision(item.unit_price, precision: 2) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      $<%= number_with_precision(item.total_price, precision: 2) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= truncate(item.specifications, length: 50) if item.specifications.present? %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <div class="flex space-x-2">
                        <%= link_to "Edit", edit_sales_order_sales_order_item_path(@sales_order, item), 
                            class: "text-indigo-600 hover:text-indigo-900" %>
                        <%= link_to "Remove", sales_order_sales_order_item_path(@sales_order, item), 
                            method: :delete, 
                            data: { confirm: "Are you sure you want to remove this item?" },
                            class: "text-red-600 hover:text-red-900" %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
              <tfoot class="bg-gray-50">
                <tr>
                  <td colspan="3" class="px-6 py-3 text-right text-sm font-medium text-gray-900">
                    Order Total:
                  </td>
                  <td class="px-6 py-3 text-sm font-bold text-gray-900">
                    $<%= number_with_precision(@sales_order.sales_order_items.sum(:total_price), precision: 2) %>
                  </td>
                  <td colspan="2"></td>
                </tr>
              </tfoot>
            </table>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No items in this order</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by adding your first product.</p>
            <div class="mt-6">
              <%= link_to "Add First Item", new_sales_order_sales_order_item_path(@sales_order), 
                  class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Notes -->
      <% if @sales_order.notes.present? %>
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Notes</h2>
          <p class="text-gray-700 whitespace-pre-wrap"><%= @sales_order.notes %></p>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Financial Summary -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Financial Summary</h2>
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-sm text-gray-500">Quotation Amount:</span>
            <span class="text-sm font-medium text-gray-900">$<%= @sales_order.quotation_amount || 0 %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-gray-500">Total Amount:</span>
            <span class="text-sm font-medium text-gray-900">$<%= @sales_order.total_amount || 0 %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-gray-500">Deposit Paid:</span>
            <span class="text-sm font-medium text-gray-900">$<%= @sales_order.deposit_amount || 0 %></span>
          </div>
          <div class="border-t pt-3">
            <div class="flex justify-between">
              <span class="text-sm font-medium text-gray-900">Remaining Balance:</span>
              <span class="text-sm font-bold text-red-600">$<%= @sales_order.remaining_amount || 0 %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Actions</h2>
        <div class="space-y-3">
          <%= link_to "Edit Order", edit_sales_order_path(@sales_order), class: "w-full bg-blue-600 text-white text-center px-4 py-2 rounded-md hover:bg-blue-700 block" %>
          <%= link_to "Print Order", "#", class: "w-full bg-gray-600 text-white text-center px-4 py-2 rounded-md hover:bg-gray-700 block" %>
          <%= link_to "Send Email", "#", class: "w-full bg-green-600 text-white text-center px-4 py-2 rounded-md hover:bg-green-700 block" %>
          <%= link_to "Cancel Order", sales_order_path(@sales_order), method: :delete, 
              data: { confirm: "Are you sure you want to cancel this order?" },
              class: "w-full bg-red-600 text-white text-center px-4 py-2 rounded-md hover:bg-red-700 block" %>
        </div>
      </div>

      <!-- Order Timeline -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Order Timeline</h2>
        <div class="space-y-3">
          <div class="flex items-center">
            <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
            <div>
              <p class="text-sm font-medium text-gray-900">Order Created</p>
              <p class="text-xs text-gray-500"><%= @sales_order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
          </div>
          <!-- Add more timeline items based on order status -->
        </div>
      </div>
    </div>
  </div>

  <!-- Back Button -->
  <div class="mt-8">
    <%= link_to "← Back to Orders", sales_orders_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
  </div>
</div>
