<% content_for :title, @sales_order.order_id %>

<div class="mx-auto md:w-4/5 w-full">
  <!-- Header -->
  <div class="flex justify-between items-start mb-6">
    <div>
      <h1 class="font-bold text-4xl">Order <%= @sales_order.order_id %></h1>
      <p class="text-gray-600 mt-2">Created on <%= @sales_order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>
    <div class="text-right">
      <span class="px-3 py-1 text-sm font-medium rounded-full
        <%= case @sales_order.order_status
            when 'inquiry' then 'bg-gray-100 text-gray-800'
            when 'quotation_sent' then 'bg-blue-100 text-blue-800'
            when 'pending_design' then 'bg-purple-100 text-purple-800'
            when 'design_approved' then 'bg-indigo-100 text-indigo-800'
            when 'confirmed' then 'bg-blue-100 text-blue-800'
            when 'in_production' then 'bg-orange-100 text-orange-800'
            when 'quality_check' then 'bg-yellow-100 text-yellow-800'
            when 'completed' then 'bg-green-100 text-green-800'
            when 'shipped' then 'bg-green-100 text-green-800'
            else 'bg-gray-100 text-gray-800'
            end %>">
        <%= @sales_order.order_status&.humanize %>
      </span>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Information -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Customer Information -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Customer Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm font-medium text-gray-500">Name</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.customer.name %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Customer ID</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.customer.customer_id %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Email</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.customer.email %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Phone</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.customer.phone %></p>
          </div>
        </div>
        <div class="mt-4">
          <%= link_to "View Customer", @sales_order.customer, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
        </div>
      </div>

      <!-- Order Details -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Order Details</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm font-medium text-gray-500">Order Date</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.order_date&.strftime("%B %d, %Y") %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Delivery Date</p>
            <p class="mt-1 text-sm text-gray-900">
              <%= @sales_order.delivery_date&.strftime("%B %d, %Y") || "Not set" %>
            </p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Sales Representative</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.employee&.name || "Unassigned" %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Department</p>
            <p class="mt-1 text-sm text-gray-900"><%= @sales_order.employee&.department&.capitalize %></p>
          </div>
        </div>
      </div>

      <!-- Stock Status Alert -->
      <% if @sales_order.order_status.in?(['inquiry', 'quotation_sent', 'confirmed']) && defined?(@sales_order.can_be_fulfilled?) && !@sales_order.can_be_fulfilled? %>
        <div class="mb-6 bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Insufficient Stock</h3>
              <div class="mt-2 text-sm text-red-700">
                <p>This order cannot be fulfilled due to insufficient stock:</p>
                <ul class="list-disc list-inside mt-1">
                  <% @sales_order.stock_warnings.each do |warning| %>
                    <li><%= warning %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Order Items -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h2 class="text-lg font-semibold text-gray-900">Order Items</h2>
        </div>

        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <!-- More compact table headers -->
            <thead class="bg-gray-50">
              <tr>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
                <th class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase w-16">Qty</th>
                <th class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase w-20">Price</th>
                <th class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase w-16">Stock</th>
                <th class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase w-20">Total</th>
                <% if @sales_order.order_status.in?(['inquiry', 'quotation_sent']) %>
                  <th class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase w-12">Del</th>
                <% end %>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @sales_order.sales_order_items.each do |item| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= item.product.name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <% if @sales_order.order_status.in?(['inquiry', 'quotation_sent']) %>
                      <%= form_with model: [@sales_order, item], local: true, class: "inline" do |form| %>
                        <%= form.number_field :quantity, value: item.quantity, min: 1,
                            class: "w-20 rounded border-gray-300 text-sm",
                            onchange: "this.form.submit();" %>
                      <% end %>
                    <% else %>
                      <%= item.quantity %>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <% if @sales_order.order_status.in?(['inquiry', 'quotation_sent']) %>
                      <%= form_with model: [@sales_order, item], local: true, class: "inline" do |form| %>
                        <%= form.number_field :unit_price, value: item.unit_price, step: 0.01, min: 0,
                            class: "w-24 rounded border-gray-300 text-sm",
                            onchange: "this.form.submit();" %>
                      <% end %>
                    <% else %>
                      $<%= number_with_precision(item.unit_price, precision: 2) %>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <%= item.product.stock_quantity %> units
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    $<%= number_with_precision(item.quantity * item.unit_price, precision: 2) %>
                  </td>
                  <% if @sales_order.order_status.in?(['inquiry', 'quotation_sent']) %>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <%= button_to sales_order_sales_order_item_path(@sales_order, item), 
                          method: :delete,
                          data: { "turbo-confirm": 'Are you sure?' },
                          class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                      <% end %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Fulfillment Actions -->
      <% if @sales_order.order_status == 'confirmed' %>
        <div class="mt-6 bg-gray-50 rounded-xl p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Order Actions</h3>
          <div class="flex space-x-4">
            <%= button_to "Mark as Completed", fulfill_sales_order_path(@sales_order), 
                method: :patch,
                class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md font-medium cursor-pointer",
                data: { "turbo-confirm": "Are you sure you want to complete this order?" } %>
          </div>
        </div>
      <% end %>

      <!-- Add Item Section (for early stage orders) -->
      <% if @sales_order.order_status.in?(['inquiry', 'quotation_sent']) %>
        <div class="mt-6 bg-gray-50 rounded-xl p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Add Order Item</h3>
          
          <%= form_with model: [@sales_order, @sales_order.sales_order_items.build], 
              local: true, class: "grid grid-cols-1 md:grid-cols-4 gap-4 items-end" do |form| %>
            
            <div>
              <%= form.label :product_id, "Product", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.select :product_id, 
                  options_from_collection_for_select(Product.where('stock_quantity > 0').order(:name), :id, :name),
                  { prompt: 'Select a product' },
                  { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
            </div>

            <div>
              <%= form.label :quantity, "Quantity", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :quantity, min: 1, value: 1,
                  class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            </div>

            <div>
              <%= form.label :unit_price, "Unit Price", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :unit_price, step: 0.01, min: 0,
                  class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            </div>

            <div>
              <%= form.submit "Add Item", 
                  class: "w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium" %>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Notes -->
      <% if @sales_order.notes.present? %>
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Notes</h2>
          <p class="text-gray-700 whitespace-pre-wrap"><%= @sales_order.notes %></p>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Financial Summary -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Financial Summary</h2>
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-sm text-gray-500">Quotation Amount:</span>
            <span class="text-sm font-medium text-gray-900">$<%= @sales_order.quotation_amount || 0 %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-gray-500">Total Amount:</span>
            <span class="text-sm font-medium text-gray-900">$<%= @sales_order.total_amount || 0 %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-gray-500">Deposit Paid:</span>
            <span class="text-sm font-medium text-gray-900">$<%= @sales_order.deposit_amount || 0 %></span>
          </div>
          <div class="border-t pt-3">
            <div class="flex justify-between">
              <span class="text-sm font-medium text-gray-900">Remaining Balance:</span>
              <span class="text-sm font-bold text-red-600">$<%= @sales_order.remaining_amount || 0 %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Actions</h2>
        <div class="space-y-3">
          <%= link_to "Edit Order", edit_sales_order_path(@sales_order), class: "w-full bg-blue-600 text-white text-center px-4 py-2 rounded-md hover:bg-blue-700 block" %>
          <%= link_to "Print Order", "#", class: "w-full bg-gray-600 text-white text-center px-4 py-2 rounded-md hover:bg-gray-700 block" %>
          <%= link_to "Send Email", "#", class: "w-full bg-green-600 text-white text-center px-4 py-2 rounded-md hover:bg-green-700 block" %>
          
          <% if @sales_order.order_status.in?(['inquiry', 'quotation_sent', 'pending_design', 'design_approved', 'confirmed']) %>
            <% if @sales_order.requires_custom_design? %>
              <%= link_to "View Design Request", @sales_order.design_request, class: "w-full bg-purple-600 text-white text-center px-4 py-2 rounded-md hover:bg-purple-700 block" %>
            <% else %>
              <%= link_to "Create Design Request", new_design_request_path(sales_order_id: @sales_order.id), class: "w-full bg-purple-600 text-white text-center px-4 py-2 rounded-md hover:bg-purple-700 block" %>
            <% end %>
          <% end %>
          
          <%= button_to "Delete Order", sales_order_path(@sales_order), 
            method: :delete, 
            data: { "turbo-confirm": "Are you sure you want to permanently delete this order? This action cannot be undone." },
            class: "w-full bg-gray-800 text-white text-center px-4 py-2 rounded-md hover:bg-gray-900 block cursor-pointer" %>
        </div>
      </div>

      <!-- Order Timeline -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Order Timeline</h2>
        <div class="space-y-3">
          <div class="flex items-center">
            <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
            <div>
              <p class="text-sm font-medium text-gray-900">Order Created</p>
              <p class="text-xs text-gray-500"><%= @sales_order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
          </div>
          <!-- Add more timeline items based on order status -->
        </div>
      </div>
    </div>
  </div>

  <!-- Back Button -->
  <div class="mt-8">
    <%= link_to "â† Back to Orders", sales_orders_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
  </div>
</div>
