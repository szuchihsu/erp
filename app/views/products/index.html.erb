<% content_for :title, "Products" %>

<div class="w-full">
  <!-- Header Section -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Products</h1>
        <p class="mt-2 text-gray-600">Manage product catalog and specifications</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to new_product_path, 
            class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          New Product
        <% end %>
        <%= link_to dashboard_path, 
            class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
          </svg>
          Back to Dashboard
        <% end %>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Filter Products</h3>
    <%= form_with url: products_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |form| %>
      <div>
        <%= form.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :search, value: params[:search],
            placeholder: "Search by name or ID...",
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500" %>
      </div>

      <div>
        <%= form.label :category, "Category", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :category, 
            options_for_select([
              ["All Categories", ""],
              ["Rings", "rings"],
              ["Necklaces", "necklaces"],
              ["Bracelets", "bracelets"],
              ["Earrings", "earrings"],
              ["Watches", "watches"],
              ["Pendants", "pendants"]
            ], params[:category]), 
            {}, 
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500" } %>
      </div>

      <div>
        <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :status, 
            options_for_select([
              ["All Statuses", ""],
              ["Active", "active"],
              ["Discontinued", "discontinued"],
              ["Out of Stock", "out_of_stock"]
            ], params[:status]), 
            {}, 
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500" } %>
      </div>

      <div class="flex items-end space-x-2">
        <%= form.submit "Apply Filters", class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-md font-medium flex-1" %>
        <%= link_to "Clear", products_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-md font-medium" %>
      </div>
    <% end %>
  </div>

  <!-- Products Table -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <% if @products.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">BOM</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @products.each do |product| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= link_to product.name, product, class: "text-purple-600 hover:text-purple-900" %>
                    </div>
                    <div class="text-sm text-gray-500">ID: <%= product.product_id %></div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-800 rounded-full capitalize">
                    <%= product.category %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <strong>$<%= product.selling_price || 0 %></strong>
                  </div>
                  <div class="text-xs text-gray-500">
                    Cost: $<%= product.cost_price || 0 %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if product.bill_of_materials.any? %>
                    <% active_bom = product.bill_of_materials.active.first %>
                    <% if active_bom %>
                      <div class="flex items-center">
                        <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded-full font-medium">
                          v<%= active_bom.version %>
                        </span>
                        <% unless active_bom.required_materials_available? %>
                          <span class="ml-1 text-xs text-red-600">âš </span>
                        <% end %>
                      </div>
                      <div class="text-xs text-gray-500 mt-1">
                        <%= pluralize(active_bom.bom_items.count, 'material') %>
                      </div>
                    <% else %>
                      <span class="px-2 py-1 text-xs bg-yellow-100 text-yellow-800 rounded-full">
                        Inactive
                      </span>
                    <% end %>
                  <% else %>
                    <span class="text-xs text-gray-400">No BOM</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <span class="text-sm text-gray-900"><%= product.stock_quantity || 0 %></span>
                    <% if product.low_stock? %>
                      <span class="ml-2 px-2 py-1 text-xs bg-red-100 text-red-800 rounded-full">Low Stock</span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                    <%= case product.status
                        when 'active' then 'bg-green-100 text-green-800'
                        when 'discontinued' then 'bg-red-100 text-red-800'
                        when 'out_of_stock' then 'bg-yellow-100 text-yellow-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= product.status&.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex space-x-2">
                    <%= link_to "View", product, class: "text-purple-600 hover:text-purple-900" %>
                    <%= link_to "BOM", product_bill_of_materials_path(product), class: "text-gray-600 hover:text-gray-900" %>
                    <%= link_to "Edit", edit_product_path(product), class: "text-gray-600 hover:text-gray-900" %>
                    <%= button_to "Delete", product_path(product), 
                      method: :delete,
                      data: { 
                        "turbo-confirm": "Are you sure you want to delete this product? This action cannot be undone." 
                      },
                      class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination placeholder -->
      <div class="bg-white px-4 py-3 border-t border-gray-200">
        <div class="flex justify-between items-center">
          <div class="text-sm text-gray-700">
            Showing <%= @products.count %> products
          </div>
        </div>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
        </svg>
        <h3 class="mt-2 text-lg font-medium text-gray-900">No products found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating your first product.</p>
        <div class="mt-6">
          <%= link_to new_product_path, 
              class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            New Product
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
