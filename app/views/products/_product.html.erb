<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Product:</strong>
    <%= product.product_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= product.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Category:</strong>
    <%= product.category %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Material:</strong>
    <%= product.material %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Weight:</strong>
    <%= product.weight %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Cost price:</strong>
    <%= product.cost_price %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Selling price:</strong>
    <%= product.selling_price %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Stock quantity:</strong>
    <%= product.stock_quantity %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Minimum stock:</strong>
    <%= product.minimum_stock %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Supplier:</strong>
    <%= product.supplier %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= product.status %>
  </div>
</div>
