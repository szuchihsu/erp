<%= form_with(model: product, class: "contents") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul class="list-disc ml-6">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :product_id %>
    <%= form.text_field :product_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:product_id].none?, "border-red-400 focus:outline-red-600": product.errors[:product_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:name].none?, "border-red-400 focus:outline-red-600": product.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:description].none?, "border-red-400 focus:outline-red-600": product.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :category, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :category, 
        [
          ["Rings", "rings"],
          ["Necklaces", "necklaces"],
          ["Bracelets", "bracelets"],
          ["Earrings", "earrings"],
          ["Watches", "watches"],
          ["Pendants", "pendants"]
        ], 
        { prompt: "Select Category" }, 
        { class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:category].none?, "border-red-400 focus:outline-red-600": product.errors[:category].any?}] } %>
  </div>

  <div class="my-5">
    <%= form.label :material %>
    <%= form.text_field :material, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:material].none?, "border-red-400 focus:outline-red-600": product.errors[:material].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :weight %>
    <%= form.text_field :weight, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:weight].none?, "border-red-400 focus:outline-red-600": product.errors[:weight].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :cost_price %>
    <%= form.text_field :cost_price, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:cost_price].none?, "border-red-400 focus:outline-red-600": product.errors[:cost_price].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :selling_price %>
    <%= form.text_field :selling_price, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:selling_price].none?, "border-red-400 focus:outline-red-600": product.errors[:selling_price].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :stock_quantity %>
    <%= form.number_field :stock_quantity, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:stock_quantity].none?, "border-red-400 focus:outline-red-600": product.errors[:stock_quantity].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :minimum_stock %>
    <%= form.number_field :minimum_stock, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:minimum_stock].none?, "border-red-400 focus:outline-red-600": product.errors[:minimum_stock].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :supplier %>
    <%= form.text_field :supplier, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:supplier].none?, "border-red-400 focus:outline-red-600": product.errors[:supplier].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :status, 
        [
          ["Active", "active"],
          ["Discontinued", "discontinued"],
          ["Out of Stock", "out_of_stock"]
        ], 
        { prompt: "Select Status" }, 
        { class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:status].none?, "border-red-400 focus:outline-red-600": product.errors[:status].any?}] } %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
