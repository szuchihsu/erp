<% content_for :title, "Showing product" %>

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <h1 class="font-bold text-4xl"><%= @product.name %></h1>

    <!-- Product Details -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <p class="my-3">
            <strong class="block font-medium mb-1">Product ID:</strong>
            <%= @product.product_id %>
          </p>
          
          <p class="my-3">
            <strong class="block font-medium mb-1">Category:</strong>
            <span class="capitalize"><%= @product.category %></span>
          </p>

          <p class="my-3">
            <strong class="block font-medium mb-1">Material:</strong>
            <span class="capitalize"><%= @product.material %></span>
          </p>

          <p class="my-3">
            <strong class="block font-medium mb-1">Weight:</strong>
            <%= @product.weight %> grams
          </p>
        </div>

        <div>
          <p class="my-3">
            <strong class="block font-medium mb-1">Cost Price:</strong>
            $<%= @product.cost_price %>
          </p>

          <p class="my-3">
            <strong class="block font-medium mb-1">Selling Price:</strong>
            $<%= @product.selling_price %>
          </p>

          <p class="my-3">
            <strong class="block font-medium mb-1">Stock Status:</strong>
            <span class="px-2 py-1 rounded-full text-xs font-medium
              <%= @product.low_stock? ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %>">
              <%= @product.stock_quantity %> in stock
              <%= "(Low Stock)" if @product.low_stock? %>
            </span>
          </p>

          <p class="my-3">
            <strong class="block font-medium mb-1">Status:</strong>
            <span class="px-2 py-1 rounded-full text-xs font-medium
              <%= @product.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= @product.status&.capitalize %>
            </span>
          </p>
        </div>
      </div>

      <% if @product.description.present? %>
        <div class="mt-6">
          <strong class="block font-medium mb-2">Description:</strong>
          <p class="text-gray-700"><%= @product.description %></p>
        </div>
      <% end %>
    </div>

    <!-- Profit Margin -->
    <% if @product.cost_price && @product.selling_price %>
      <div class="bg-blue-50 rounded-lg p-4 mb-6">
        <h3 class="font-medium text-blue-900 mb-2">Profit Analysis</h3>
        <p class="text-blue-700">
          Profit Margin: <strong><%= @product.profit_margin %>%</strong>
          (<%= @product.selling_price - @product.cost_price %> profit per unit)
        </p>
      </div>
    <% end %>

    <!-- Inventory Information -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-semibold text-gray-900">Inventory Information</h2>
        <div class="flex space-x-2">
          <%= link_to "Adjust Stock", adjust_inventory_path(@product), class: "bg-yellow-600 text-white px-3 py-1 rounded-md text-sm hover:bg-yellow-700" %>
          <%= link_to "Restock", restock_inventory_path(@product), class: "bg-green-600 text-white px-3 py-1 rounded-md text-sm hover:bg-green-700" %>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div>
          <p class="text-sm font-medium text-gray-500">Current Stock</p>
          <p class="mt-1 text-2xl font-bold text-gray-900"><%= @product.stock_quantity || 0 %></p>
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= @product.stock_status_badge_class %>">
            <%= @product.stock_status.humanize %>
          </span>
        </div>

        <div>
          <p class="text-sm font-medium text-gray-500">Available Stock</p>
          <p class="mt-1 text-2xl font-bold text-gray-900"><%= @product.available_stock %></p>
          <% if @product.reserved_stock && @product.reserved_stock > 0 %>
            <p class="text-xs text-gray-500">(<%= @product.reserved_stock %> reserved)</p>
          <% end %>
        </div>

        <div>
          <p class="text-sm font-medium text-gray-500">Minimum Level</p>
          <p class="mt-1 text-lg font-medium text-gray-900"><%= @product.minimum_stock_level || 'Not set' %></p>
          <% if @product.reorder_needed? %>
            <p class="text-xs text-red-600 font-medium">Reorder needed!</p>
          <% end %>
        </div>

        <div>
          <p class="text-sm font-medium text-gray-500">Stock Value</p>
          <p class="mt-1 text-lg font-medium text-gray-900">$<%= number_with_precision(@product.stock_value, precision: 2) %></p>
          <p class="text-xs text-gray-500">Cost basis</p>
        </div>
      </div>

      <% if @product.last_restocked_at %>
        <div class="mt-4 text-sm text-gray-500">
          Last restocked: <%= @product.last_restocked_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
      <% end %>
    </div>

    <!-- Recent Stock Movements -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Recent Stock Movements</h2>
      <% recent_movements = @product.stock_movement_history(5) %>
      <% if recent_movements.any? %>
        <div class="space-y-3">
          <% recent_movements.each do |transaction| %>
            <div class="flex justify-between items-center py-2 border-b border-gray-100 last:border-b-0">
              <div>
                <p class="text-sm font-medium text-gray-900">
                  <%= transaction.transaction_description %>
                </p>
                <p class="text-xs text-gray-500">
                  <%= transaction.created_at.strftime("%m/%d/%Y %I:%M %p") %> by <%= transaction.user&.name %>
                </p>
              </div>
              <span class="text-sm font-medium <%= transaction.quantity > 0 ? 'text-green-600' : 'text-red-600' %>">
                <%= transaction.quantity > 0 ? '+' : '' %><%= transaction.quantity %>
              </span>
            </div>
          <% end %>
        </div>
        <div class="mt-4">
          <%= link_to "View All Transactions", inventory_transactions_path(product_id: @product.id), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-4">No stock movements recorded yet.</p>
      <% end %>
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center justify-between">
      <%= link_to "Edit this product", edit_product_path(@product), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to "Back to products", products_path, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <%= button_to "Destroy this product", product_path(@product), 
          method: :delete,
          data: { 
            "turbo-confirm": "Are you sure you want to delete this product? This action cannot be undone." 
          },
          class: "rounded-lg py-3 ml-2 px-5 bg-red-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  </div>
</div>
