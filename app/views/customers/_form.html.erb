<%= form_with(model: customer, class: "contents") do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul class="list-disc ml-6">
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :customer_id %>
    <%= form.text_field :customer_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": customer.errors[:customer_id].none?, "border-red-400 focus:outline-red-600": customer.errors[:customer_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": customer.errors[:name].none?, "border-red-400 focus:outline-red-600": customer.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": customer.errors[:email].none?, "border-red-400 focus:outline-red-600": customer.errors[:email].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": customer.errors[:phone].none?, "border-red-400 focus:outline-red-600": customer.errors[:phone].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :address %>
    <%= form.textarea :address, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": customer.errors[:address].none?, "border-red-400 focus:outline-red-600": customer.errors[:address].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :customer_type, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :customer_type, 
        [
          ["Retail Customer", "retail"],
          ["Wholesale Customer", "wholesale"], 
          ["VIP Customer", "vip"]
        ], 
        { prompt: "Select Customer Type" }, 
        { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>

  <div class="my-5">
    <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :status, 
        [
          ["Active", "active"],
          ["Inactive", "inactive"],
          ["Blocked", "blocked"]
        ], 
        { prompt: "Select Status" }, 
        { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
