<!-- app/views/inventory/adjust_stock.html.erb -->
<% content_for :title, "Adjust Stock" %>

<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-4">
      <%= link_to inventory_path, 
          class: "text-gray-400 hover:text-gray-600" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Stock Adjustment</h1>
        <p class="text-gray-600">Product: <span class="font-medium"><%= @product.display_name %></span></p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Current Stock Info -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Current Status</h3>
        
        <div class="space-y-4">
          <div>
            <p class="text-sm font-medium text-gray-500">Current Stock</p>
            <p class="text-3xl font-bold text-gray-900"><%= @product.stock_quantity || 0 %></p>
          </div>
          
          <div>
            <p class="text-sm font-medium text-gray-500">Stock Status</p>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @product.stock_status_badge_class %>">
              <%= @product.stock_status.humanize %>
            </span>
          </div>

          <% if @product.minimum_stock_level %>
            <div>
              <p class="text-sm font-medium text-gray-500">Minimum Level</p>
              <p class="text-lg font-medium text-gray-900"><%= @product.minimum_stock_level %></p>
            </div>
          <% end %>

          <% if @product.last_restocked_at %>
            <div>
              <p class="text-sm font-medium text-gray-500">Last Restocked</p>
              <p class="text-sm text-gray-900"><%= @product.last_restocked_at.strftime("%B %d, %Y") %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Adjustment Form -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-6">Make Adjustment</h3>

        <%= form_with(model: [@product, @adjustment], url: create_adjustment_inventory_path(@product), method: :post, class: "space-y-6") do |form| %>
          <% if @adjustment.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-md p-4">
              <div class="flex">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">Please correct the following errors:</h3>
                  <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                    <% @adjustment.errors.each do |error| %>
                      <li><%= error.full_message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>

          <div>
            <%= form.label :adjustment_type, "Adjustment Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :adjustment_type, 
                options_for_select([
                  ['Select adjustment type', ''],
                  ['Increase Stock', 'increase'],
                  ['Decrease Stock', 'decrease'],
                  ['Physical Recount', 'recount'],
                  ['Damaged Items', 'damage'],
                  ['Lost/Stolen Items', 'loss'],
                  ['Found Items', 'found']
                ]), 
                {}, 
                { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
          </div>

          <div>
            <%= form.label :quantity, "Quantity Change", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :quantity, 
                placeholder: "Enter positive number for increase, negative for decrease",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            <p class="mt-1 text-sm text-gray-500">
              Use positive numbers to increase stock, negative numbers to decrease stock
            </p>
          </div>

          <div>
            <%= form.label :reason, "Reason for Adjustment", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :reason, 
                rows: 4,
                placeholder: "Provide a detailed explanation for this stock adjustment...",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
            <%= link_to "Cancel", inventory_path, 
                class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <%= form.submit "Apply Adjustment", 
                class: "px-4 py-2 bg-blue-600 border border-transparent rounded-md text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>