<!-- app/views/inventory/adjust_stock.html.erb -->
<% content_for :title, "Adjust Stock" %>

<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-4">
      <%= link_to inventory_path, 
          class: "text-gray-400 hover:text-gray-600" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Stock Adjustment</h1>
        <p class="text-gray-600">
          <%= @item.class.name %>: 
          <span class="font-medium">
            <%= @item.respond_to?(:display_name) ? @item.display_name : @item.name %>
          </span>
        </p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Current Stock Info -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Current Status</h3>
        
        <div class="space-y-4">
          <div>
            <p class="text-sm font-medium text-gray-500">Current Stock</p>
            <p class="text-3xl font-bold text-gray-900">
              <%= @item.respond_to?(:stock_quantity) ? (@item.stock_quantity || 0) : (@item.current_stock || 0) %>
            </p>
          </div>
          
          <div>
            <p class="text-sm font-medium text-gray-500">Stock Status</p>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
              <%= if @item.respond_to?(:stock_status_badge_class)
                    @item.stock_status_badge_class
                  else
                    case @item.stock_status
                    when 'in_stock' then 'bg-green-100 text-green-800'
                    when 'low_stock' then 'bg-yellow-100 text-yellow-800'  
                    when 'out_of_stock' then 'bg-red-100 text-red-800'
                    else 'bg-gray-100 text-gray-800'
                    end
                  end %>">
              <%= @item.respond_to?(:stock_status) ? @item.stock_status.humanize : 'Unknown' %>
            </span>
          </div>

          <% if @item.respond_to?(:minimum_stock_level) && @item.minimum_stock_level %>
            <div>
              <p class="text-sm font-medium text-gray-500">Minimum Level</p>
              <p class="text-lg font-medium text-gray-900"><%= @item.minimum_stock_level %></p>
            </div>
          <% elsif @item.respond_to?(:minimum_stock) && @item.minimum_stock %>
            <div>
              <p class="text-sm font-medium text-gray-500">Minimum Level</p>
              <p class="text-lg font-medium text-gray-900"><%= @item.minimum_stock %></p>
            </div>
          <% end %>

          <% if @item.respond_to?(:last_restocked_at) && @item.last_restocked_at %>
            <div>
              <p class="text-sm font-medium text-gray-500">Last Restocked</p>
              <p class="text-sm text-gray-900"><%= @item.last_restocked_at.strftime("%B %d, %Y") %></p>
            </div>
          <% end %>

          <!-- Show item type specific fields -->
          <% if @item.is_a?(Material) %>
            <% if @item.category %>
              <div>
                <p class="text-sm font-medium text-gray-500">Category</p>
                <p class="text-sm text-gray-900"><%= @item.category.humanize %></p>
              </div>
            <% end %>
            <% if @item.unit_of_measure %>
              <div>
                <p class="text-sm font-medium text-gray-500">Unit</p>
                <p class="text-sm text-gray-900"><%= @item.unit_of_measure %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Adjustment Form -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-6">Make Adjustment</h3>

        <%= form_with url: (@item.is_a?(Product) ? adjust_inventory_path(@item) : adjust_material_inventory_path(@item)), 
            method: :post, local: true, class: "space-y-6" do |form| %>
          <div>
            <%= label_tag :adjustment_type, "Adjustment Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= select_tag :adjustment_type, 
                options_for_select([
                  ['Select adjustment type', ''],
                  ['Increase Stock', 'increase'],
                  ['Decrease Stock', 'decrease'],
                  ['Physical Recount', 'recount'],
                  ['Damaged Items', 'damage'],
                  ['Lost/Stolen Items', 'loss'],
                  ['Found Items', 'found']
                ]), 
                { required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
          </div>

          <div>
            <%= label_tag :quantity, "Quantity Change", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= number_field_tag :quantity, nil,
                required: true,
                placeholder: "Enter positive number for increase, negative for decrease",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            <p class="mt-1 text-sm text-gray-500">
              Use positive numbers to increase stock, negative numbers to decrease stock
            </p>
          </div>

          <div>
            <%= label_tag :reason, "Reason for Adjustment", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= text_area_tag :reason, nil,
                rows: 4,
                required: true,
                placeholder: "Provide a detailed explanation for this stock adjustment...",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
            <%= link_to "Cancel", inventory_path, 
                class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
            <%= submit_tag "Apply Adjustment", 
                class: "px-4 py-2 bg-blue-600 border border-transparent rounded-md text-sm font-medium text-white hover:bg-blue-700" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>