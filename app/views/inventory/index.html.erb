<!-- app/views/inventory/index.html.erb -->
<% content_for :title, "Inventory Management" %>

<div class="w-full">
  <!-- Header Section -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Inventory Management</h1>
        <p class="mt-2 text-gray-600">Monitor stock levels, track movements, and manage inventory adjustments</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to inventory_transactions_path, 
            class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          View All Transactions
        <% end %>
      </div>
    </div>
  </div>

  <!-- Key Metrics Dashboard -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Inventory Value -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Total Inventory Value</p>
          <p class="text-2xl font-bold text-gray-900">$<%= number_with_precision(@total_inventory_value, precision: 2) %></p>
        </div>
      </div>
    </div>

    <!-- Low Stock Items -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Low Stock Alerts</p>
          <p class="text-2xl font-bold text-gray-900"><%= @low_stock_products.count %></p>
          <% if @low_stock_products.any? %>
            <p class="text-xs text-yellow-600 font-medium">Requires attention</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Out of Stock -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Out of Stock</p>
          <p class="text-2xl font-bold text-gray-900"><%= @out_of_stock_products.count %></p>
          <% if @out_of_stock_products.any? %>
            <p class="text-xs text-red-600 font-medium">Urgent restock needed</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Active Products -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Active Products</p>
          <p class="text-2xl font-bold text-gray-900"><%= Product.active.count %></p>
          <p class="text-xs text-green-600 font-medium">In good standing</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Alert Section -->
  <% if @low_stock_products.any? || @out_of_stock_products.any? %>
    <div class="mb-8">
      <% if @out_of_stock_products.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-4">
          <div class="flex">
            <svg class="h-6 w-6 text-red-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd"></path>
            </svg>
            <div class="ml-3">
              <h3 class="text-lg font-medium text-red-800">Critical: Out of Stock Items</h3>
              <div class="mt-3">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                  <% @out_of_stock_products.limit(6).each do |product| %>
                    <div class="bg-white rounded-md p-3 border border-red-200">
                      <p class="font-medium text-gray-900"><%= product.name %></p>
                      <p class="text-sm text-gray-500"><%= product.product_id %></p>
                      <div class="mt-2 flex space-x-2">
                        <%= link_to "Restock", restock_inventory_path(product), 
                            class: "text-xs bg-red-600 text-white px-2 py-1 rounded hover:bg-red-700" %>
                        <%= link_to "View", product, 
                            class: "text-xs text-red-600 hover:text-red-800" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% if @low_stock_products.any? %>
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
          <div class="flex">
            <svg class="h-6 w-6 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
            <div class="ml-3">
              <h3 class="text-lg font-medium text-yellow-800">Low Stock Alert</h3>
              <p class="mt-1 text-sm text-yellow-700">The following products are running low and may need restocking soon:</p>
              <div class="mt-4">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                  <% @low_stock_products.limit(6).each do |product| %>
                    <div class="bg-white rounded-md p-3 border border-yellow-200">
                      <p class="font-medium text-gray-900"><%= product.name %></p>
                      <p class="text-sm text-gray-500"><%= product.product_id %></p>
                      <p class="text-sm text-yellow-700">
                        <span class="font-medium"><%= product.stock_quantity %></span> remaining
                        <span class="text-xs">(min: <%= product.minimum_stock_level %>)</span>
                      </p>
                      <div class="mt-2 flex space-x-2">
                        <%= link_to "Restock", restock_inventory_path(product), 
                            class: "text-xs text-red-600 hover:text-red-800" %>
                        <%= link_to "Adjust", adjust_inventory_path(product), 
                            class: "text-xs text-yellow-600 hover:text-yellow-800" %>
                      </div>
                    </div>
                  <% end %>
                </div>
                <% if @low_stock_products.count > 6 %>
                  <div class="mt-4">
                    <%= link_to "View all #{@low_stock_products.count} low stock items →", 
                        products_path(filter: 'low_stock'), 
                        class: "text-yellow-700 hover:text-yellow-800 font-medium" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Recent Activity -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
      <div class="flex justify-between items-center">
        <h2 class="text-lg font-semibold text-gray-900">Recent Inventory Activity</h2>
        <%= link_to "View All Transactions →", inventory_transactions_path, 
            class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
      </div>
    </div>

    <% if @recent_transactions.any? %>
      <div class="divide-y divide-gray-200">
        <% @recent_transactions.each do |transaction| %>
          <div class="px-6 py-4 hover:bg-gray-50">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case transaction.transaction_type
                        when 'in' then 'bg-green-100 text-green-800'
                        when 'out' then 'bg-red-100 text-red-800'
                        when 'adjustment' then 'bg-yellow-100 text-yellow-800'
                        when 'transfer' then 'bg-blue-100 text-blue-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= transaction.transaction_type.humanize %>
                  </span>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">
                    <%= link_to transaction.product.name, transaction.product, 
                        class: "hover:text-blue-600" %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%= transaction.product.product_id %> • <%= transaction.notes&.truncate(40) %>
                  </p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-sm font-medium <%= transaction.transaction_type == 'out' ? 'text-red-600' : 'text-green-600' %>">
                  <%= transaction.transaction_type == 'out' ? '-' : '+' %><%= transaction.quantity %>
                </p>
                <p class="text-xs text-gray-500">
                  <%= transaction.created_at.strftime("%m/%d %I:%M %p") %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No activity yet</h3>
        <p class="mt-1 text-sm text-gray-500">Inventory transactions will appear here as you manage your stock.</p>
      </div>
    <% end %>
  </div>
</div>