<!-- app/views/inventory/restock.html.erb -->
<% content_for :title, "Restock Product" %>

<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-4">
      <%= link_to inventory_path, 
          class: "text-gray-400 hover:text-gray-600" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Restock Product</h1>
        <p class="text-gray-600">Product: <span class="font-medium"><%= @product.display_name %></span></p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Product Info -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Current Status</h3>
        
        <div class="space-y-4">
          <div>
            <p class="text-sm font-medium text-gray-500">Current Stock</p>
            <p class="text-3xl font-bold text-gray-900"><%= @product.stock_quantity || 0 %></p>
          </div>

          <% if @product.reorder_point %>
            <div>
              <p class="text-sm font-medium text-gray-500">Reorder Point</p>
              <p class="text-lg font-medium text-gray-900"><%= @product.reorder_point %></p>
            </div>
          <% end %>

          <% if @product.optimal_stock_level %>
            <div>
              <p class="text-sm font-medium text-gray-500">Optimal Level</p>
              <p class="text-lg font-medium text-gray-900"><%= @product.optimal_stock_level %></p>
              <% if @product.stock_quantity && @product.optimal_stock_level %>
                <% recommended = @product.optimal_stock_level - @product.stock_quantity %>
                <% if recommended > 0 %>
                  <p class="text-xs text-blue-600 font-medium">Recommended: +<%= recommended %> units</p>
                <% end %>
              <% end %>
            </div>
          <% end %>

          <% if @product.cost_price %>
            <div>
              <p class="text-sm font-medium text-gray-500">Unit Cost</p>
              <p class="text-lg font-medium text-gray-900">$<%= @product.cost_price %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Restock Form -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-6">Add Stock</h3>

        <%= form_with url: create_restock_inventory_path(@product), method: :post, class: "space-y-6" do |form| %>
          <div>
            <%= label_tag :quantity, "Quantity to Add", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= number_field_tag :quantity, nil, 
                min: 1,
                placeholder: "Number of units to add to inventory",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div>
            <%= label_tag :supplier, "Supplier / Source", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= text_field_tag :supplier, nil, 
                placeholder: "Supplier name, vendor, or source of these items",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div>
            <%= label_tag :cost, "Total Cost (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-500 sm:text-sm">$</span>
              </div>
              <%= number_field_tag :cost, nil, 
                  step: 0.01,
                  placeholder: "0.00",
                  class: "block w-full pl-7 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            </div>
            <p class="mt-1 text-sm text-gray-500">
              Total cost for this restock batch (for cost tracking)
            </p>
          </div>

          <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
            <%= link_to "Cancel", inventory_path, 
                class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <%= submit_tag "Add to Inventory", 
                class: "px-4 py-2 bg-blue-600 border border-transparent rounded-md text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>