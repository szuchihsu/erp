<% content_for :title, "Showing employee" %>

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <h1 class="font-bold text-4xl mb-4"><%= @employee.name %></h1>

    <div class="mb-5">
      <p class="my-5">
        <strong class="block font-medium mb-1">Employee ID:</strong>
        <%= @employee.employee_id %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Email:</strong>
        <%= @employee.email %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Phone:</strong>
        <%= @employee.phone %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Department:</strong>
        <%= @employee.department %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Position:</strong>
        <%= @employee.position %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Hire date:</strong>
        <%= @employee.hire_date %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Salary:</strong>
        <%= @employee.salary %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Status:</strong>
        <%= @employee.status %>
      </p>

      <% if @employee.supervisor %>
        <p class="my-5">
          <strong class="block font-medium mb-1">Supervisor:</strong>
          <%= @employee.supervisor.name %>
        </p>
      <% end %>
    </div>

    <div class="flex items-center justify-between">
      <%= link_to "Edit this employee", edit_employee_path(@employee), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to "Back to employees", employees_path, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <%= button_to "Destroy this employee", employee_path(@employee), 
          method: :delete,
          data: { 
            "turbo-confirm": "Are you sure you want to delete this employee? This action cannot be undone." 
          },
          class: "rounded-lg py-3 ml-2 px-5 bg-red-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  </div>
</div>
