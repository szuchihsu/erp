<% content_for :title, "Employees" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Employees</h1>
    <%= link_to "New employee", new_employee_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="employees" class="min-w-full">
    <% @employees.each do |employee| %>
      <div class="border rounded-lg p-4 mb-4 bg-white shadow">
        <h3 class="font-semibold text-lg"><%= employee.name %></h3>
        <p class="text-gray-600">Employee ID: <%= employee.employee_id %></p>
        <p class="text-gray-600">Department: <%= employee.department %></p>
        <p class="text-gray-600">Position: <%= employee.position %></p>
        <div class="mt-4 flex space-x-2">
          <%= link_to "Show", employee, class: "rounded-lg py-2 px-3 bg-gray-100 inline-block font-medium" %>
          <%= link_to "Edit this employee", edit_employee_path(employee), class: "rounded-lg py-2 px-3 bg-gray-100 inline-block font-medium" %>
          <%= button_to "Destroy this employee", employee_path(employee), 
              method: :delete,
              data: { 
                "turbo-confirm": "Are you sure you want to delete this employee? This action cannot be undone." 
              },
              class: "rounded-lg py-2 px-3 bg-red-600 text-white inline-block font-medium cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
